@page
@model RazorPageEmpManagement.Pages.EmployeePage.DetailsModel

<h2>Employee Details</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Employee.EmployeeId" />

    <div class="form-group">
        <label asp-for="Employee.FirstName" class="control-label"></label>
        <input asp-for="Employee.FirstName" class="form-control" readonly />
        <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Employee.LastName" class="control-label"></label>
        <input asp-for="Employee.LastName" class="form-control" readonly />
        <span asp-validation-for="Employee.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Employee.DepartmentId" class="control-label"></label>
        <select asp-for="Employee.DepartmentId" class="form-control" asp-items="Model.Departments" disabled></select>
        <input type="hidden" asp-for="Employee.DepartmentId" />
        <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Employee.RoleId" class="control-label"></label>
        <select asp-for="Employee.RoleId" class="form-control" asp-items="Model.Roles" disabled></select>
        <input type="hidden" asp-for="Employee.RoleId" />
        <span asp-validation-for="Employee.RoleId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Employee.TeamId" class="control-label"></label>
        <select asp-for="Employee.TeamId" class="form-control" asp-items="Model.Teams" disabled></select>
        <input type="hidden" asp-for="Employee.TeamId" />
        <span asp-validation-for="Employee.TeamId" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="Employee.Username" class="control-label"></label>
        <input asp-for="Employee.Username" class="form-control" />
        <span asp-validation-for="Employee.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Employee.Password" class="control-label"></label>
        <input asp-for="Employee.Password" class="form-control" />
        <span asp-validation-for="Employee.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>

    @if (!string.IsNullOrEmpty(HttpContext.Session.GetString("SuccessMessage")))
    {
        <div class="alert alert-success">
            @HttpContext.Session.GetString("SuccessMessage")
        </div>
    }

</form>

<!--Logout-->
<form method="post" asp-page-handler="Logout">
    <button type="submit" class="btn btn-primary">Logout</button>
</form>
